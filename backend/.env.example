APP_ENV=dev
APP_HOST=127.0.0.1
APP_PORT=8000

# Database (use one of the lines, then delete the other)
# DATABASE_URL=postgresql+psycopg2://postgres:postgres@127.0.0.1:5432/meeting_assistant
DATABASE_URL=sqlite:///./local.db

# LLM runtime
OLLAMA_HOST=http://127.0.0.1:11434
LLM_MODEL=llama3.1:8b-instruct-q4_K_M

# ASR (Whisper via faster-whisper)
ASR_MODEL=large-v3
ASR_DEVICE=cuda
ASR_COMPUTE_TYPE=float16
# ASR_COMPUTE_TYPE=int8_float16

# VAD
VAD_MODE=2

# Retrieval
EMBEDDING_MODEL=sentence-transformers/all-MiniLM-L6-v2
FAISS_INDEX=FlatIP
QA_TOP_K=8

# CORS (comma-separated origins; use * only for local testing)
CORS_ALLOWED_ORIGINS=http://localhost:3000

# Logging
LOG_LEVEL=INFO

# Feature flags
ENABLE_DIARIZATION=false
ENABLE_CODE_SWITCH_TAGGING=true
